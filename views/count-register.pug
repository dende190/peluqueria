append scripts 
    script.

        function updateTotal(inputClass) {
            let total = 0
            $(`.${inputClass}`).each(function(){
                if($(this).val()) {
                    total += parseInt($(this).attr('data-price')) * parseInt($(this).val())
                }
            })
            return total
        }

        $('.coin').on("input", function(){
            let total = updateTotal("coin")
            $('#totalCoins').html(total)
            $('#totalRegister').html( parseInt($("#totalBills").text()) + total)
        })
        $('.bill').on("input", function(){
            let total = updateTotal("bill")
            $('#totalBills').html(total)
            $('#totalRegister').html( parseInt($("#totalCoins").text()) + total)
        })
