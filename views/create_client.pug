extends layout_dashboard

block content
    .container
        .col-lg-10.mx-auto
            .box
                h2.title-create-employee-form Datos del nuevo Cliente
                .col-lg-8.mx-auto
                    form#formCreateEmployee(action="/crear-cliente" method="POST")
                        .form-group.row
                            label.col-sm-3.col-form-label.label-form(for="inputEmployeeName") Nombres
                            .col-sm-9
                                input#inputEmployeeName.form-control(type="text" name="name" placeholder="Nombres")
                        .form-group.row
                            label.col-sm-3.col-form-label.label-form(for="inputEmployeeLastname") Apellidos
                            .col-sm-9
                                input#inputEmployeeLastname.form-control(type="text" name="lastName" placeholder="Apellidos")
                        .form-group.row
                            label.col-sm-3.col-form-label.label-form(for="inputEmployeeEmail") Email
                            .col-sm-9
                                input#inputEmployeeEmail.form-control(type="email" name="email" placeholder="Email")
                        .form-group.row
                            label.col-sm-3.col-form-label.label-form(for="inputEmployeeCC") C.C.
                            .col-sm-9
                                input#inputEmployeeCC.form-control(type="text" name="cc" placeholder="C.C.")
                        .form-group.row
                            label.col-sm-3.col-form-label.label-form(for="inputEmployeePhone") Telefono
                            .col-sm-9
                                input#inputEmployeePhone.form-control(type="number" name="phone" placeholder="Telefono")
                        button.btn.btn-primary(type="submit") Crear Empleado